<Application x:Class="Acorisoft.Morisa.Tools.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Acorisoft.Morisa.Tools"
             xmlns:convs="clr-namespace:Acorisoft.Morisa.Tools.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- 主题 -->
            <ResourceDictionary.MergedDictionaries>

                <!-- Morisa UI -->
                <ResourceDictionary Source="pack://application:,,,/Acorisoft.Morisa.Shell;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <convs:ResourceConverter x:Key="Resource"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
