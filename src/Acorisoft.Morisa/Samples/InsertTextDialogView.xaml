<rx:ReactiveUserControl x:Class="Acorisoft.Morisa.Samples.InsertTextDialogView"
                        x:TypeArguments="app:InsertTextDialogViewModel"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                        xmlns:app="clr-namespace:Acorisoft.Morisa.Samples"
                        xmlns:rx="http://reactiveui.net"
                        xmlns:mo="https://github.com/Acorisoft/Morisa"
                        mc:Ignorable="d" 
                        Width="384"
                        Height="384">
    <Border Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>
            <TextBlock Text="对话框测试" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <UniformGrid Columns="2" Grid.Row="1">
                <Button Content="Ok" Command="{x:Static mo:DialogCommands.Ok}" />
                <Button Content="Ok" Command="{x:Static mo:DialogCommands.Ok}" Grid.Row="1"/>
            </UniformGrid>
        </Grid>
    </Border>
</rx:ReactiveUserControl>
