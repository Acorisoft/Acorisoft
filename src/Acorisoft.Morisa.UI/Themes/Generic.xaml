                                           Stroke="Black"
                                           StrokeDashArray="2 2 "
                                           SnapsToDevicePixels="True"
                                           UseLayoutRounding="True"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    
