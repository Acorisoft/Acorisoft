<Window x:Class="Pandora.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pandora.Host"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:markdig="https://github.com/Acorisoft/markdig.wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <avalon:TextEditor x:Name="Editor" TextChanged="Editor_TextChanged" FontSize="15" 
                           SyntaxHighlighting="MarkDown" 
                           LineNumbersForeground="Black" 
                           ShowLineNumbers="True">
            <avalon:TextEditor.Options>
                <avalon:TextEditorOptions ShowSpaces="False" ShowTabs="False">
                    
                </avalon:TextEditorOptions>
            </avalon:TextEditor.Options>
        </avalon:TextEditor>
        <markdig:MarkdownViewer Grid.Column="1" x:Name="Renderer"/>
    </Grid>
</Window>
