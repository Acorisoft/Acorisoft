<Window x:Class="WPF.Manipulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Manipulation"
        mc:Ignorable="d"
        IsManipulationEnabled="True"
        Background="White"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainPanel" Background="Transparent">
        <Grid x:Name="Panel" Background="CornflowerBlue" Width="360" HorizontalAlignment="Left">
            <Grid.RenderTransform>
                <TranslateTransform X="-360" />
            </Grid.RenderTransform>
        </Grid>
    </Grid>
</Window>
